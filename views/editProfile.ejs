<!doctype html>
<html lang="en">

<head>
    <%- include('partials/headerLink') %>
        <title>JD Web Solution - Edit Profile page</title>
</head>

<body>

    <%- include('partials/navbar') %>


        <div class="container-fluid">
            <div class="row">
                <div class="col-md-6 mx-auto">
                    <div class="registerForm">
                        <h1>Edit Your Profile <span></span></h1>
                        <form action="/edituserdata/<%=id%>" method="POST" enctype="multipart/form-data">
                            <div class="form-group">
                                <label for="name">Name</label>
                                <input type="text" class="form-control inputStyle" name="name" id="name"
                                    aria-describedby="nameHelp" placeholder="Enter your Name" value="<%=name%>"
                                    required>
                                <small id="nameError" class="form-text"></small>
                            </div>
                            <div class="form-group">
                                <label for="email">Email </label>
                                <input type="email" class="form-control inputStyle" name="email" id="email"
                                    aria-describedby="emailHelp" placeholder="Enter email" value="<%=useremail%>"
                                    required>
                                <small id="emailError" class="form-text"></small>
                            </div>
                            <div class="form-group">
                                <label for="phone">Phone no</label>
                                <input type="number" class="form-control inputStyle" name="phone" id="phone"
                                    aria-describedby="phoneHelp" placeholder="Enter your phone no"
                                    value="<%=userphoneno%>" required>
                                <small id="phoneError" class="form-text"></small>
                            </div>

                            <div class="form-group">
                                <label for="profileImg">Upload profile image</label>
                                <input type="file" class="form-control inputStyle" name="filename" id="profileImg"
                                    value="">
                                <small id="imageError" class="form-text"></small>
                            </div>

                            <div class="form-group">
                                <label for="gender">Gender</label>
                                <select class="form-control" id="gender" name="gender" required>
                                    <% if( gender=='male' ){ %>
                                        <option name='' value="">Select gender</option>
                                        <option name="male" value="male" selected>Male</option>
                                        <option name="female" value="female">Female</option>
                                        <% }else{ %>
                                            <option name='' value="">Select gender</option>
                                            <option name="male" value="male">Male</option>
                                            <option name="female" value="female" selected>Female</option>
                                            <% } %>

                                </select>
                            </div>

                            <div class="row">
                                <div class="col-md-6 col-12">
                                    <div class="form-group">
                                        <label for="password">Password</label>
                                        <input type="password" class="form-control inputStyle" name="password"
                                            id="password" placeholder="Password" value="">
                                    </div>
                                </div>
                                <div class="col-md-6 col-12">
                                    <div class="form-group">
                                        <label for="cpassword">Confirm Password</label>
                                        <input type="password" class="form-control inputStyle" name="cpassword"
                                            id="password" placeholder="Confirm Password" value="">
                                        <small id="passwordError" class="form-text"></small>
                                    </div>
                                </div>
                            </div>
                            <button type="submit" id="editProfileBtn" class="btn " value="EditProfile">Edit
                                Profile</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>


        <%- include('partials/footer') %>
</body>

</html>